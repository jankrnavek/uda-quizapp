<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B0BEC5">

    <ScrollView style="@style/scrollLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/HeaderTextViewFirst"
                android:text="What is the capital's name?" />

            <EditText
                android:id="@+id/q1_et"
                style="@style/editText"
                android:hint="Name of the capital..."
                android:inputType="textCapCharacters" />

            <TextView
                style="@style/HeaderTextViewOthers"
                android:text="What is the second largest city?" />

            <RadioGroup
                android:id="@+id/q2_ag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q2_a1"
                    style="@style/radioCheckboxButton"
                    android:text="Ostrava" />

                <RadioButton
                    android:id="@+id/q2_a2"
                    style="@style/radioCheckboxButton"
                    android:text="Pardubice" />

                <RadioButton
                    android:id="@+id/q2_a3"
                    style="@style/radioCheckboxButton"
                    android:text="Brno" />

                <RadioButton
                    android:id="@+id/q2_a4"
                    style="@style/radioCheckboxButton"
                    android:text="Český Krumlov" />
            </RadioGroup>

            <TextView
                style="@style/HeaderTextViewOthers"
                android:text="Choose all famous czech authors" />

            <CheckBox
                android:id="@+id/q3_a1"
                style="@style/radioCheckboxButton"
                android:text="Milan Kundera" />

            <CheckBox
                android:id="@+id/q3_a2"
                style="@style/radioCheckboxButton"
                android:text="Charles Bukowski" />

            <CheckBox
                android:id="@+id/q3_a3"
                style="@style/radioCheckboxButton"
                android:text="Jan Potocki" />

            <CheckBox
                android:id="@+id/q3_a4"
                style="@style/radioCheckboxButton"
                android:text="Franc Kafka" />

            <TextView
                style="@style/HeaderTextViewOthers"
                android:text="How big is the population?" />

            <RadioGroup
                android:id="@+id/q4_ag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q4_a1"
                    style="@style/radioCheckboxButton"
                    android:text="9,500,000" />

                <RadioButton
                    android:id="@+id/q4_a2"
                    style="@style/radioCheckboxButton"
                    android:text="8,200,000" />

                <RadioButton
                    android:id="@+id/q4_a3"
                    style="@style/radioCheckboxButton"
                    android:text="12,100,000" />

                <RadioButton
                    android:id="@+id/q4_a4"
                    style="@style/radioCheckboxButton"
                    android:text="10,600,000" />
            </RadioGroup>

            <TextView
                style="@style/HeaderTextViewOthers"
                android:text="How many regions is there?" />

            <RadioGroup
                android:id="@+id/q5_ag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/q5_a1"
                    style="@style/radioCheckboxButton"
                    android:text="11" />

                <RadioButton
                    android:id="@+id/q5_a2"
                    style="@style/radioCheckboxButton"
                    android:text="12" />

                <RadioButton
                    android:id="@+id/q5_a3"
                    style="@style/radioCheckboxButton"
                    android:text="13" />

                <RadioButton
                    android:id="@+id/q5_a4"
                    style="@style/radioCheckboxButton"
                    android:text="14" />
            </RadioGroup>

            <LinearLayout style="@style/buttonLinearLayout">

                <Button
                    android:id="@+id/buttonReset"
                    style="@style/buttonSubmit"
                    android:text="Reset" />

                <Button
                    android:id="@+id/buttonSubmit"
                    style="@style/buttonReset"
                    android:text="Submit" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</RelativeLayout>