<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="HeaderTextViewRoot">
        <item name="android:background">#546E7A</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ECEFF1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="HeaderTextViewFirst" parent="HeaderTextViewRoot">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="HeaderTextViewOthers" parent="HeaderTextViewRoot">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="button">
        <item name="android:textSize">22dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="buttonSubmit" parent="button">
        <item name="android:layout_marginLeft">2dp</item>
    </style>

    <style name="buttonReset" parent="button">
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <style name="radioCheckboxButton">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="editText">
        <item name="android:gravity">center</item>
        <item name="android:ems">11</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">#37474F</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">roboto</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="buttonLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="scrollLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:fillViewport">true</item>
        <item name="android:padding">12dp</item>
    </style>

</resources>
